<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="microcontent">
    <%= link_to image_tag(micropost.picture.url), micropost %>
  </span>
  <span class="timestamp">
    Shared <%= time_ago_in_words(micropost.created_at) %> ago.
    <!-- START DELETE LINK -->
    <% if current_user.admin? || current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete, data: { confirm: "You sure?" }, class: "btn-sm btn-warning" %>
    <% end %>
  </span>
  
</li>
