<li id="comment-<%= comment.id %>">
  <span class="com_user"><%= link_to comment.user.name, comment.user %><br /><br /></span>
  <span class="com_content"><%= comment.content %><br /><br /></span>
  <span class="timestamp">
    Comment published <%= time_ago_in_words(comment.created_at) %> ago.
    <% if current_user.admin? || current_user?(comment.user) %>
        <%= link_to "delete", micropost_comment_path(comment.micropost,comment),
			data: {confirm: "You sure?"}, method: :delete %>
    <% end %>
  </span>
</li>
